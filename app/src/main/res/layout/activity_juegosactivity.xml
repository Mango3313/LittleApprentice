<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="8dp"
    tools:context=".juegosactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRehil"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true">
        <ImageView
            android:id="@+id/imW"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/windmill"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imW"
            android:textSize="9pt"
            android:textColor="#000"
            android:text="Molino" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpeak"
        android:layout_margin="8dp"
        android:gravity="center"
        android:clickable="true"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/speak_d" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:textColor="#000"
            android:text="Habla" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnWords"
        android:layout_margin="8dp"
        android:gravity="center"
        android:clickable="true"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/words"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:textColor="#000"
            android:text="Palabras" />
    </LinearLayout>
</LinearLayout>